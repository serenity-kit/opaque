{
  "include": [
    "tests/**/*",
    "examples/server-simple",
    "examples/server-with-password-reset",
    "examples/client-simple-webpack",
    "examples/client-with-password-reset",
    "examples/client-simple-vite"
  ],
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
